run = "python3 -m http.server 3000 --directory public"
modules = ["python-3.11"]

[env]
PORT = "3000"

[web]
  assets = "public"
  port = 3000
  start = "python3 -m http.server 3000 --directory public"

[agent]
expertMode = true
integrations = ["google-mail:1.0.0", "google-sheet:1.0.0"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dashboard"

[[workflows.workflow]]
name = "Dashboard"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd public && python3 server.py"
waitForPort = 5000

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python3 -m http.server 3000 --directory public"]
